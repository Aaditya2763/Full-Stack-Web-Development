<% layout('layout/boilerplate') -%>


  <div class="row">
    <div class="col-lg-5 ">
      <div class="card" style="width: 25rem;">
        <img src="<%=product.img %> " class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%=product.name %> 
          </h5> 
          <p class="card-text">
            <%=product.desc %>
          </p>
          <p class="card-text h3">$<%=product.price %>
          </p>
          <a href="#" class="btn btn-sm btn-primary">Buy Now</a>
          <a href="/products/<%= product._id %>/edit" class="btn btn-sm btn-dark">Edit</a>
          <a href="#" class="btn btn-sm btn-success">Add to cart</a>
          <form action="/products/<%=product._id%>?_method=DELETE" method="post" class="d-inline-block">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
        </div>
      </div>

    </div>

    <div class="col-lg-6 border ">
      <h1 class="display-6 mx-5">Leave Your Review</h1>
        
    <div>
      <form action="/products/<%=product._id%>/review" method="POST">
        <fieldset class="starability-basic mx-5">
          <legend class="h6">Rating</legend>
          <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="rating" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="rating" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="rating" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="rating" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="rating" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
       
       
          <label for="rating" class="form-lable mx-5 ">comment</label>
         <textarea name="comment" id="comment" rows="3" class="form-control  mx-5" style="width:320px" ></textarea>
          
          
      
        <button type="submit" class="btn btn-primary mx-5 mb-5" style="margin-top: 10px;">Submit</button>
      </form>
    </div>
      
    <div class="mb-3 mx-5 ">
      <!-- reverse()will show the rewies according to time -->
      <% for(let review of product.reviews.reverse()){ %>
          <div class="card mb-2">
              <div class="card-body">
                  <p class="starability-result" data-rating="<%=review.rating%>" >
                    
                  </p>
                  <p>  Rated: <%=review.rating%> stars</p>
                 
                  <p><%=review.comment%></p>
                  <button class="btn btn-sm btn-danger">Delete</button>
              </div>
            
            </div>
      <% } %>  
  </div>
      
    </div>
  