<% layout('layout/boilerplate') -%>


  <div class="row">
    <div class="col-lg-5 ">
      <div class="card" style="width: 25rem;">
        <img src="<%=product.img %> " class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%=product.name %>
          </h5> 
          <p class="card-text">
            <%=product.desc %>
          </p>
          <p class="card-text h3">$<%=product.price %>
          </p>
          <a href="#" class="btn btn-sm btn-primary">Buy Now</a>
          <a href="/products/<%= product._id %>/edit" class="btn btn-sm btn-dark">Edit</a>
          <a href="#" class="btn btn-sm btn-success">Add to cart</a>
          <form action="/products/<%=product._id%>?_method=DELETE" method="post" class="d-inline-block">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
        </div>
      </div>

    </div>

    <div class="col-lg-6 ">
      <h1 class="display-6 mx-5">Leave Your Review</h1>
      
        <label for="customRange3" class="form-label"></label>
          <input type="range" class="form-range  mx-5" min="0" max="5" step="1.25" id="customRange3" style="width:20rem">
    <div>
      <form>
        <div class="mx-5">
         <textarea name="" id="" cols="50" rows="5" class="form-control my-5" ></textarea>
          
          
        </div>
        <button type="submit" class="btn btn-primary mx-5" style="margin-top: -50px;">Submit</button>
      </form>
    </div>
      

      
    </div>
  </div>